@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bilgisayar Mühendisi | Full-Stack Developer</title>
    <link rel="stylesheet" href="~/Template/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Template/css/aos.css" />
    <link rel="stylesheet" href="~/Template/css/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body id="top">

    @await Html.PartialAsync("HeaderPartial")
    @await Html.PartialAsync("NavbarPartial")

    <!-- PDF İndir Butonu -->
    <div style="text-align: center; margin: 20px 0;">
        <button id="downloadPage" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">
            📄 Sayfayı PDF Olarak İndir
        </button>
    </div>

    <div class="page-content">
        <div id="content">

            @using EntityLayer.Concrete
            @model List<Feature>

            <!-- HEADER -->
            <header>
                <div class="cover bg-light">
                    <div class="container px-3">
                        <div class="row">
                            <div class="col-lg-6 p-2">
                                <img class="img-fluid" src="~/Template/images/illustrations/hello3.svg" alt="hello" />
                            </div>
                            <div class="col-lg-6">
                                <div class="mt-5">
                                    <p class="lead text-uppercase mb-1">Merhaba!</p>
                                    <h1 class="intro-title marker" data-aos="fade-left" data-aos-delay="50">Abdullah Haktan</h1>
                                    <p class="lead fw-normal mt-3" data-aos="fade-up" data-aos-delay="100">Bilgisayar Mühendisi | Full-Stack Developer</p>
                                    @await Component.InvokeAsync("SocialMediaList")
